@{
    Layout = "";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>IRCII Client - Bootstrap UI</title>
    <link href="/css/ircii.css" rel="stylesheet"/>
    <!-- Bootstrap 5 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />

    <!-- Bootstrap Icons -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" rel="stylesheet" />
</head>
<body>
    <div id="app-container">
        <!-- Status Bar -->
        <div id="status-bar">
            <span id="server-info">Not connected</span>
            <span class="float-end" id="clock">01:37 PM</span>
        </div>

        <div id="chat-container">
            <!-- Channel Tabs -->
            <div id="channel-tabs">
                <div class="channel-tab active" data-channel="#ircii">
                    <i class="bi bi-hash"></i> #ircii
                </div>
                <div class="channel-tab" data-channel="#bootstrap">
                    <i class="bi bi-hash"></i> #bootstrap <span class="badge bg-secondary">2</span>
                </div>
                <div class="channel-tab" data-channel="=Grok">
                    <i class="bi bi-person"></i> =Grok
                </div>
                <div class="channel-tab" data-channel="*status*">
                    <i class="bi bi-terminal"></i> *status*
                </div>
            </div>

            <!-- Chat Output -->
            <div id="chat-output">
            </div>

            <!-- User List -->
            <div id="user-list">
            </div>
        </div>

        <!-- Input Area -->
        <div id="input-area">
            <form id="input-form" class="d-flex">
                <textarea id="message-input" class="form-control" rows="1" placeholder="Type message or /command..." autocomplete="off"></textarea>
                <button id="send-btn" class="btn btn-primary" type="submit">
                    <i class="bi bi-send"></i>
                </button>
            </form>
            <div id="nick-complete"></div>
        </div>
    </div>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/8.0.0/signalr.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/ircii.js"></script>
</body>
</html>